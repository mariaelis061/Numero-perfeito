#include <stdio.h>

void main(){


int n,i, soma = 0;

printf("Me informe um numero para eu verificar se ele eh perfeito:\t");
    scanf("%d", &n);

for (i = 1; i<n; i++){
    if(n%i==0){
        soma += i;
    }
    }

if(soma == n){
    printf("Esse numero eh perfeito!");
}else{
    printf("Esse numero nao eh perfeito");
}

}

